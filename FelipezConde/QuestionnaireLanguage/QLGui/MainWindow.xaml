<Window x:Class="QLGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Questionnaire Language" Height="600" Width="400">
    <Grid Background="LightGray" MouseDown="Grid_MouseDown">
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_File">
                    <MenuItem Header="_Export Answers" Click="ExportAnswers_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel x:Name="_stack" Margin="10">
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
