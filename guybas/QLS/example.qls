Sheet taxOfficeExample

Page Housing

    Section Buying {
        Question hasBoughtHouse
        Widget : Checkbox
    }

    Section Loaning {
        Question hasMaintLoan
        Widget : Radio (yes, no)
    }

Page Selling

    Section Selling {
        Question hasSoldHouse
        Widget : Dropdown (Yes, No)
    }

    Section You_Sold_A_House {
